<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.ConnectWithPCFragment">

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/titleConnectWithPC"
        android:id="@+id/titleConnectWithPC"
        style="@style/TitleFontDesign"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/phone_to_pc"
        android:layout_margin="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to download actions from the pc"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>
